@model IEnumerable<UniversitySystem.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student.StudentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.FirstMidName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.CourseID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th>
                @if (item.Student == null)
                {
                    @:Fuck
                }
                @Html.DisplayFor(modelItem => item.Student.StudentID)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Student.FirstMidName)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Course.CourseID)
            </th>
            <td>
                @if (item.Grade == -1)
                {
                    @:No Grade Yet
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Grade)
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.enrollmentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.enrollmentID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.enrollmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
